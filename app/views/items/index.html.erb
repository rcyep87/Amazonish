<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to "#{item.name}", item %></td>
        <td><%= item.description %></td>
        <td>$<%= item.price %></td>
        <td><%= item.quantity %></td>
        <% if current_user %>
          <td><%= link_to('Add to cart', lineitems_path(lineitem: { item_id: item.id, quantity: 1 }),
            method: :POST) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
